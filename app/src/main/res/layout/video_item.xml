<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Default"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/white" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/framelayoout_video_item"
        android:text="这是一个视频单元"
        android:id="@+id/textview_video_item_name" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/framelayoout_video_item"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/img_video_item_image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp">

            <ImageView
                android:id="@+id/img_video_item_comment"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="2dp"
                android:layout_weight="1"
                android:src="@drawable/follow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:padding="2dp"
                android:text="no data"
                android:id="@+id/textview_video_item_comment"
                android:layout_toRightOf="@+id/img_video_item_comment"
                android:layout_weight="3" />

            <ImageView
                android:id="@+id/img_video_item_like"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="2dp"
                android:layout_toRightOf="@+id/textview_video_item_comment"
                android:layout_weight="1"
                android:src="@drawable/follow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:padding="2dp"
                android:text="no data"
                android:id="@+id/textview_video_item_like"
                android:layout_toRightOf="@+id/img_video_item_like"
                android:layout_weight="3"
                android:src="@drawable/follow" />

        </LinearLayout>



    </RelativeLayout>

</RelativeLayout>