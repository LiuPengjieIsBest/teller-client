<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        style="@style/Default"
        android:layout_margin="0dp"
        android:background="@color/grey"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:text="手机注册" />


    <Button
        android:id="@+id/btn_regr_submit"
        style="@style/RoundBtn"
        android:layout_below="@id/tl_regr_form"
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:text="提交" />

    <TableLayout
        android:id="@+id/tl_regr_mobile_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow>

            <TextView
                style="@style/Default"
                android:text="手机:" />

            <EditText
                android:id="@+id/edtTxt_regr_mobile_mobile"
                style="@style/RoundEdtTxt"
                android:layout_span="2"
                android:hint="手机号码" />

        </TableRow>

        <TableRow>

            <TextView
                style="@style/Default"
                android:text="验证码:" />

            <EditText
                android:id="@+id/edtTxt_regr_mobile_code"
                style="@style/RoundEdtTxt"
                android:hint="验证码" />

            <Button
                android:id="@+id/btn_regr_mobile_code"
                style="@style/RoundBtn"
                android:text="获取验证码" />

        </TableRow>

        <TableRow>

            <TextView
                style="@style/Default"
                android:text="密码:" />

            <EditText
                android:id="@+id/edtTxt_regr_mobile_pwd"
                style="@style/RoundEdtTxt"
                android:layout_span="2"
                android:inputType="textPassword"
                android:hint="密码" />

        </TableRow>

        <TableRow>

            <TextView
                style="@style/Default"
                android:text="确认密码:" />

            <EditText
                android:id="@+id/edtTxt_regr_mobile_pwd1"
                style="@style/RoundEdtTxt"
                android:layout_span="2"
                android:hint="请重复输入密码" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/txt_regr_mobile_warn"
        style="@style/Default"
        android:textColor="@color/red"
        android:layout_below="@id/tl_regr_mobile_form"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_regr_mobile_submit"
        style="@style/RoundBtn"
        android:layout_below="@id/txt_regr_mobile_warn"
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:text="提交" />

    <TextView
        android:id="@+id/btn_regr_mobile_toEmail"
        style="@style/Default"
        android:clickable="true"
        android:layout_below="@id/btn_regr_mobile_submit"
        android:layout_width="100dp"
        android:gravity="center_horizontal"
        android:text="邮箱注册"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
