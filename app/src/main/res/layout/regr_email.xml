<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/Default"
        android:layout_margin="0dp"
        android:background="@color/grey"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:text="邮箱注册" />



    <TableLayout
        android:id="@+id/tl_regr_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            style="@style/Default"
            android:layout_centerHorizontal="true" />

        <TableRow>

            <TextView
                style="@style/Default"
                android:text="邮箱：" />

            <EditText
                android:id="@+id/edtTxt_regr_Email"
                style="@style/RoundEdtTxt"
                android:layout_span="2"
                android:hint="邮箱地址" />

        </TableRow>


        <TableRow>

            <TextView
                style="@style/Default"
                android:text="密码:" />

            <EditText
                android:id="@+id/edtTxt_regr_Emailpwd"
                style="@style/RoundEdtTxt"
                android:layout_span="2"
                android:inputType="textPassword"
                android:hint="密码" />

        </TableRow>

        <TableRow>

            <TextView
                style="@style/Default"
                android:text="确认密码:" />

            <EditText
                android:id="@+id/edtTxt_regr_EmailPwdCheck"
                style="@style/RoundEdtTxt"
                android:layout_span="2"
                android:hint="请重复输入密码" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/txt_regr_email_warn"
        style="@style/Default"
        android:textColor="@color/red"
        android:gravity="center_horizontal"
        android:layout_below="@id/tl_regr_form"
        android:layout_width="250dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_regr_EmailSubmit"
        style="@style/RoundBtn"
        android:layout_below="@id/txt_regr_email_warn"
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:text="提交" />

    <TextView
        android:id="@+id/btn_regr_toMobile"
        style="@style/Default"
        android:clickable="true"
        android:layout_below="@id/btn_regr_EmailSubmit"
        android:layout_width="100dp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:text="手机注册" />

</RelativeLayout>