<?xml version="1.0" encoding="utf-8"?>
<!-- 首页布局 -->
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dl_activity_main_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- 主要页面显示区 -->
        <FrameLayout
            android:id="@+id/fl_activity_main_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
        </FrameLayout>

        <!-- 下方标签区 -->
        <fragment
            android:id="@+id/frag_activity_main_tabs"
            android:name="com.panda.teller.fragments.TabsFragment"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

    </LinearLayout>

    <!-- 用户菜单，刚开始隐藏在左边 -->
    <fragment
        android:name="com.panda.teller.fragments.UserMenuFragment"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start" />

</android.support.v4.widget.DrawerLayout>