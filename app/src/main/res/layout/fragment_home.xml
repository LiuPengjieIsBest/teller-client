<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dl_fragment_first_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- main -->
    <LinearLayout
        android:id="@+id/ll_fragment_home_main"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- action bar -->
        <FrameLayout
            android:id="@+id/fl_fragment_home_actionbar"
            style="@style/ActionBar"/>
        <!-- 分割线 -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/bar" />

        <!-- 主要页面显示区 -->
        <FrameLayout
            android:id="@+id/fl_fragment_home_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
        </FrameLayout>

        <!-- 下方标签区 -->
        <fragment
            android:id="@+id/frag_fragment_home_tabs"
            android:name="com.panda.teller.fragments.TabsFragment"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

    </LinearLayout>

    <!-- 用户菜单，刚开始隐藏在左边 -->
    <fragment
        android:name="com.panda.teller.fragments.UserMenuFragment"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start" />

</android.support.v4.widget.DrawerLayout>