<?xml version="1.0" encoding="utf-8"?>
<!-- 用户菜单，从左边拉出来的那个 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">


            <com.panda.teller.views.widgets.RoundImgView
                android:id="@+id/riv_fragment_user_menu_head"
                android:layout_centerInParent="true"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/head"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="14sp"
                android:text="我的昵称"
                android:layout_marginTop="14dp"
                android:layout_below="@id/riv_fragment_user_menu_head"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
        <!-- 分割线 -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/greybar" />

        <Button
            android:text="个人信息"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:background="@drawable/rectbtn"
            android:textColor="@color/deepgrey"
            android:id="@+id/button_infomation" />
        <!-- 分割线 -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/greybar" />

        <Button
            android:text="我的提问"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:background="@drawable/rectbtn"
            android:textColor="@color/deepgrey"
            android:id="@+id/button_myQuestion" />
        <!-- 分割线 -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/greybar" />

        <Button
            android:text="我的回答"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:background="@drawable/rectbtn"
            android:textColor="@color/deepgrey"
            android:id="@+id/button_myAnswer" />
        <!-- 分割线 -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/greybar" />

        <Button
            android:text="我的投稿"
            android:background="@drawable/rectbtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/deepgrey"
            android:id="@+id/button_myDraft" />
        <!-- 分割线 -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/greybar" />

        <Button
            android:text="我的征集令"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:background="@drawable/rectbtn"
            android:textColor="@color/deepgrey"
            android:id="@+id/button_myCollect" />
        <!-- 分割线 -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/greybar" />

        <Button
            android:text="浏览历史"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:background="@drawable/rectbtn"
            android:textColor="@color/deepgrey"
            android:id="@+id/button_myHistory" />
        <!-- 分割线 -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/greybar" />

    </LinearLayout>


    <!-- <Button
        android:text="设置"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/setting"
        android:paddingLeft="50dp"
        android:background="@null"
        android:textColor="@color/deepgrey"
        android:layout_alignParentBottom="true" /> -->
    <RelativeLayout
        android:id="@+id/button_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectbtn"
        android:layout_alignParentBottom="true" >

        <TextView
            android:text="设置"
            android:id="@+id/settings_word"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:src="@drawable/config"
            android:layout_toLeftOf="@id/settings_word" />

    </RelativeLayout>
    <!-- 分割线 -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:scaleType="fitXY"
        android:layout_above="@id/button_settings"
        android:src="@drawable/greybar" />
</RelativeLayout>