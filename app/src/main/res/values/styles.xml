<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryDark">@color/deepgrey</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Default" >
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <!-- 圆角按钮 -->
    <style name="RoundBtn" parent="@style/Default">
        <item name="android:background">@drawable/btn</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <!-- 圆角输入框 -->
    <style name="RoundEdtTxt" parent="@style/Default">
        <item name="android:textSize">13sp</item>
        <item name="android:background">@drawable/edttxt</item>
    </style>

    <!-- 圆角文本框 -->
    <style name="RoundTV" parent="@style/Default">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/deepgrey</item>
        <item name="android:background">@drawable/tv</item>
    </style>
    
</resources>
